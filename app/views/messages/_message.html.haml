.main-space__center-center__boxes
  .main-space__center-center__boxes__some
    .main-space__center-center__boxes__some__name
      = message.user.name
    .main-space__center-center__boxes__some__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-space__center-center__boxes__list
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?